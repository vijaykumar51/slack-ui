.workspace-header
	border-bottom: 1px solid #6b4f6d
	box-sizing: border-box
	display: flex
	justify-content: space-between
	align-items: center
	padding: 12px
	.workspace-info-container
		.workspace-name
			color: #eee
			font-size: 22px
			font-weight: bold
		.user-info-container
			.user-status
				&.online
					&:before
						content: "\f111";
						font-family: FontAwesome;
						font-size: 12px;
						color: green
			.user-name
				color: #fff
				font-size: 14px
				margin-left: 7px
	.workspace-edit-button
		.fa-stack
			cursor: pointer
			font-size: 20px
			.fa-circle
				color: #eee
				font-size: 38px
			.fa-pencil-square-o
				color: #3c1041
				font-size: 20px
				margin-left: 2px
		