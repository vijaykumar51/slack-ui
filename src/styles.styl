/* You can add global styles to this file, and also import other style files */
body
	margin: 0
	padding: 0
	box-sizing: border-box
	height: 100vh
	font-family: 'Inconsolata', monospace;

::-webkit-scrollbar
	width: 8px

::-webkit-scrollbar-track 
	background: #f1f1f1
	border-radius: 5px

::-webkit-scrollbar-thumb
	background: #aaa
	border-radius: 5px

::-webkit-scrollbar-thumb:hover
	background: #555
